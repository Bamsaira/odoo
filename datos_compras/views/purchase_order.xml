<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record model="ir.ui.view" id="purchase_order_view">
        <field name="name">purchase_order_view_form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_ref']" position="after">
               <field name="street_id"/>
            </xpath>
            <xpath expr="//field[@name='date_order']" position="before">
               <field name="requisicion"/>
            </xpath>
            <xpath expr="//field[@name='street_id']" position="after">
               <field name="contacto" widget="selection"/>
            </xpath>
            <xpath expr="//field[@name='fiscal_position_id']" position="after">
               <field name="transporte"/>
            </xpath>
            <xpath expr="//field[@name='transporte']" position="after">
               <field name="uso"/>
            </xpath>
         </field>
    </record>
</odoo>