<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_order_form_inherit_vender_por_peso" model="ir.ui.view">
        <field name="name">view.order.form.inherit.vender.por.peso</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom']" position="after">
                <field name="vender_por_peso" attrs="{'invisible': [('peso_producto', '=', 0)], 'readonly': [('state', '!=', 'draft')]}"/>
                <field name="peso" attrs="{'invisible': [('vender_por_peso', '=', False)], 'readonly': [('state', '!=', 'draft')]}"/>
                <field name="peso_producto" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']" position="attributes">
                <attribute name="attrs">{'readonly': [('vender_por_peso', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom']" position="attributes">
                <attribute name="attrs">{'readonly': ['|', ('product_uom_readonly', '=', True), ('vender_por_peso', '=', True)], 'required': [('display_type', '=', False)]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>